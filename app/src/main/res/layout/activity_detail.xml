<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#ffffff"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncall"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="callBtn"
            android:text="@string/detail_button_call_now"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnreserve"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:onClick="reserveBtn"
            android:text="@string/detail_button_book_now"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="246dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/dtHomeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.05"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:textSize="20sp"
                tools:text="@string/detail_text_house_name" />

            <TextView
                android:id="@+id/dtAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.09"
                android:paddingLeft="16dp"
                android:textColor="#6d6d6d"
                android:textSize="12sp"
                tools:text="@string/detail_text_address" />

            <TextView
                android:id="@+id/dtIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="-0.07"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:textColor="#6d6d6d"
                android:textSize="12sp"
                tools:text="@string/detail_text_introduce" />

            <TextView
                android:id="@+id/monthPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:letterSpacing="-0.05"
                android:paddingRight="24dp"
                android:paddingTop="44dp"
                android:textSize="20sp"
                tools:text="@string/detail_text_monthly_payment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dtPreprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:letterSpacing="-0.09"
                    android:paddingBottom="8dp"
                    android:paddingRight="24dp"
                    android:paddingTop="8dp"
                    android:text="보증금 200,000"
                    android:textColor="#6d6d6d"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dtDeposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingRight="24dp"
                    android:paddingTop="8dp"
                    android:text="계약금 50,000"
                    android:textColor="#6d6d6d"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="@string/detail_header_infomation"
                android:textSize="14sp" />

            <LinearLayout
